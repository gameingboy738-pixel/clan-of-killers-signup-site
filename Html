  </div>  <script>
    // Simple client-side signup (localStorage). You said বাকি সব টিক থাকবে — তাই এখানেই data save হবে।
    function uid(){ return 'id_'+Math.random().toString(36).slice(2,9); }
    function load(){ try{ return JSON.parse(localStorage.getItem('wh_signups')||'[]'); }catch(e){ return []; } }
    function save(list){ localStorage.setItem('wh_signups', JSON.stringify(list)); }

    function handleSubmit(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const wh = document.getElementById('wh_number').value.trim();
      const pass = document.getElementById('password').value.trim();
      if(!name || !phone){ alert('নাম ও ফোন নম্বর দিন'); return false; }
      const list = load();
      list.push({ id: uid(), name, phone, wh_number: wh, password: pass, status: 'pending', created: Date.now() });
      save(list);
      alert('আপনার আবেদন জমা হয়েছে। অ্যাডমিন অনুমোদন করলে আপনি লিংক পেয়ে যাবেন।');
      document.getElementById('signupForm').reset();
      return false;
    }
  </script></body>
